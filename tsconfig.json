{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "#cogs": [
        "src/index.mjs"
      ],
      "#cogs/cogs": [
        "src/cogs/index.jsx"
      ],
      "#cogs/cogs/*": [
        "src/cogs/*/index.jsx"
      ],
      "#cogs/common": [
        "src/common/index.mjs"
      ],
      "#cogs/components/*": [
        "src/components/*/index.jsx"
      ],
      "#cogs/transformers/*": [
        "src/transformers/*/index.mjs"
      ],
      "#stories/cogs/*": [
        "stories/cogs/*/index.stories.jsx"
      ],
      "#stories/errors": [
        "stories/errors.mjs"
      ],
      "#stories/state": [
        "stories/state/index.jsx"
      ],
      "#stories/state/*": [
        "stories/state/*/index.jsx"
      ]
    }
  },
  "include": [
    ".",
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
