{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "#cogs/cogs": [
        "src/cogs/index.jsx"
      ],
      "#cogs/cogs/*": [
        "src/cogs/*/index.jsx"
      ],
      "#cogs/common": [
        "src/common/index.mjs"
      ],
      "#cogs/components/*": [
        "src/components/*/index.jsx"
      ],
      "#stories/*": [
        "stories/*/index.stories.jsx"
      ],
      "#stories/state": [
        "stories/state/index.jsx"
      ],
      "#stories/state/*": [
        "stories/state/*/index.jsx"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
